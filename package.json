{
  "name": "@infra-blocks/error",
  "version": "0.0.0",
  "description": "Error utilities.",
  "keywords": [
    "error"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/infra-blocks/ts-error.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/cjs/index.js",
    "default": "./lib/esm/index.js"
  },
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*.{js,cjs,mjs,json,d.ts,map}"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -b tsconfig.build.esm.json",
    "build:cjs": "tsc -b tsconfig.build.cjs.json",
    "postbuild": "scripts/post-build.sh",
    "clean": "rm -rf lib && rm -f infra-blocks-*.tgz",
    "compile": "tsc",
    "fix": "biome check --write",
    "lint": "biome ci",
    "prepack": "npm run build",
    "test": "npm run test:unit",
    "test:coverage": "c8 npm run test",
    "test:coverage:lcov": "c8 --reporter=lcov npm run test",
    "test:unit": "mocha --config test/unit/.mocharc.cjs 'test/unit/**/*.spec.ts'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@infra-blocks/checks": "^0.2.7",
    "@infra-blocks/test": "^0.5.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "c8": "^10.1.3",
    "conditional-type-checks": "^1.0.6",
    "lefthook": "^2.0.8",
    "mocha": "^11.7.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@infra-blocks/types": "^0.20.0"
  }
}
